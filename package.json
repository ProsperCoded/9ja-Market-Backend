{
  "name": "9ja-market-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "commonjs",
  "packageManager": "pnpm@10.2.0",
  "scripts": {
    "start": "node dist/src/server.js",
    "start:dev": "concurrently \"npm run watch-ts\" \"nodemon dist/src/server.js\"",
    "dev": "tsx watch src/server.ts",
    "build": "npm install --legacy-peer-deps && npm run clean && tsc -p .",
    "build-code": "tsc -p .",
    "clean": "rimraf dist/",
    "clean:logs": "rimraf logs/",
    "watch-ts": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src/**/*.ts --fix",
    "test": "NODE_ENV=test jest --forceExit --coverage --verbose --colors --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev"
  },
  "jest": {
    "verbose": false,
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.[jt]sx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "author": "obycodez55",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.7.8",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.5.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "events": "^3.3.0",
    "express": "^4.19.2",
    "googleapis": "^144.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.47",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.16",
    "passport": "^0.5.3",
    "passport-google-oauth20": "^2.0.0",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.0.0",
    "typescript": "^5.5.4",
    "uuid": "^10.0.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "ts-lint": "^4.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0"
  },
  "overrides": {
    "multer-storage-cloudinary": {
      "cloudinary": "^2.5.1"
    }
  }
}
